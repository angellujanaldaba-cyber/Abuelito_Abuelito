generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  idProducto   Int     @id @default(autoincrement())
  nombre       String
  precio       Int
  descripcion  String?
  imgproducto  String?
}

model Pedido {
  id          Int          @id @default(autoincrement())
  nombre      String
  telefono    String
  direccion   String
  comentarios String?
  total       Int
  createdAt   DateTime     @default(now())
  items       PedidoItem[]
}

model PedidoItem {
  id        Int     @id @default(autoincrement())
  nombre    String
  precio    Int
  cantidad  Int
  imagenurl String?
  pedidoId  Int
  pedido    Pedido  @relation(fields: [pedidoId], references: [id])

  @@map("PedidoItem")
}
